@model List<Vizeproje.Models.Raporlar>

@{
    ViewBag.Title = "ShowRaporlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Raporlar</h2>

<button type="button" class="btn btn-info" onclick="location.href='@Url.Action("ShowRaporlar", "Home")'">Raporları Göster</button>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Mezunlar</th>
        <th>Aktif</th>
        <th></th> <!-- Düzenle ve Sil için boş hücre -->
    </tr>
    @foreach (var rapor in Model)
    {
        <tr>
            <td>@rapor.id</td>
            <td>@rapor.Mezunlar</td>
            <td>@rapor.Aktif</td>
            <td>
                <a href="#" class="btn btn-warning" onclick="editRapor(@rapor.id, '@rapor.Mezunlar', '@rapor.Aktif')">Edit</a>
            </td>
            <td>
                <form action="@Url.Action("DeleteRapor", "Home")" method="post">
                    <input type="hidden" name="id" value="@rapor.id" />
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Bu raporu silmek istediğinizden emin misiniz?')">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>

<!-- EditRapor Modal -->
<div id="editRaporModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Raporu Düzenle</h4>
            </div>
            <div class="modal-body">
                <form id="editRaporForm" action="@Url.Action("EditRapor", "Home")" method="post">
                    <input type="hidden" id="editRaporId" name="id" />
                    <div class="form-group">
                        <label for="editMezunlar">Mezunlar:</label>
                        <input type="text" class="form-control" id="editMezunlar" name="Mezunlar" />
                    </div>
                    <div class="form-group">
                        <label for="editAktif">Aktif:</label>
                        <input type="text" class="form-control" id="editAktif" name="Aktif" />
                    </div>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        function editRapor(id, mezunlar, aktif) {
            $("#editRaporId").val(id);
            $("#editMezunlar").val(mezunlar);
            $("#editAktif").val(aktif);
            $("#editRaporModal").modal("show");
        }
    </script>
}
